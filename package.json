{
    "name": "react-thingie",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "order": "npx eslint --fix 'src/**/*.{js,ts,jsx,tsx}'",
        "lint": "eslint .",
        "scan": "npx react-scan@latest http://localhost:5173/",
        "preview": "vite preview",
        "clear": "vite --force",
        "lm": "lms server start --cors",
        "component": "node scripts/component.js",
        "#foo": "npm run component -- src/Foo/index.tsx",
        "#withCSS": "npm run component -- src/Foo/index.tsx --css",
        "play": "npx playwright test",
        "playUI": "npx playwright test --ui",
        "codegen": "npx playwright codegen http://localhost:5173/react-thingie",
        "#bar": "npx playwright test bar",
        "test": "vitest",
        "test:run": "vitest run",
        "test:watch": "vitest --watch"
    },
    "dependencies": {
        "@react-aria/focus": "^3.21.1",
        "@tanstack/react-query": "^5.90.2",
        "dayjs": "^1.11.18",
        "immer": "^10.1.3",
        "nuqs": "^2.7.0",
        "openai": "^6.0.0",
        "react": "^19.1.1",
        "react-aria": "^3.43.1",
        "react-aria-components": "^1.13.0",
        "react-dom": "^19.1.1",
        "react-intersection-observer": "^9.16.0",
        "react-markdown": "^10.1.0",
        "react-stick": "^5.0.7",
        "rehype-mermaid": "^3.0.0",
        "remark-breaks": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "resize-observer-polyfill": "^1.5.1",
        "uninstall": "^0.0.0",
        "write-excel-file": "^2.3.10"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@playwright/test": "^1.56.0",
        "@types/node": "^24.7.1",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.0",
        "eslint": "^9.35.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "fast-check": "^4.3.0",
        "globals": "^16.3.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.1",
        "vite": "^7.1.2",
        "vitest": "^3.2.4"
    }
}
